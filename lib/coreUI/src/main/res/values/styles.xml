<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/ActionBarTheme</item>
        <item name="android:statusBarColor">@color/almostWhite</item>
        <item name="dialogTheme">@style/AlertDialogTheme</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="actionMenuTextAppearance">@style/ActionBarMenu</item>
        <item name="materialAlertDialogTheme">@style/CustomMaterialAlertDialogTheme</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true
        </item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionBarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@color/almostWhite</item>
        <item name="android:textColorPrimary">@color/text_high_contrast</item>
    </style>

    <style name="ActionBarMenu" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="textAllCaps">false</item>
    </style>

    <style name="CollapsingToolbarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/text_high_contrast</item>
    </style>

    <style name="CollapsingToolbarTheme.Statements">
        <item name="android:background">@color/almostWhite</item>
        <item name="android:textColorPrimary">@color/text_high_contrast</item>
    </style>

    <style name="CollapsedToolbarTextStyle">
        <item name="android:textAppearance">@style/H_20_Medium</item>
        <item name="android:textColor">@color/text_high_contrast</item>
    </style>

    <style name="CollapsedToolbarTextStyle.Statements">
        <item name="android:textAppearance">@style/Body_16_Medium</item>
        <item name="android:textColor">@color/text_high_contrast</item>
    </style>
</resources>