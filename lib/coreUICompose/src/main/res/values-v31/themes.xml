<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowSplashScreenBackground">@color/steel_gray_50</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_splash_240dp</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
        <item name="android:statusBarColor">@color/steel_gray_50</item>
        <item name="android:navigationBarColor">@color/steel_gray_50</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Требуется для корректной работы темы на Xiaomi -->
        <item name="android:forceDarkAllowed">false</item>
    </style>

</resources>